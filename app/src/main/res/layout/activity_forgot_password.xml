<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#D3D3D3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/btnBackForgot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#8B1A1A"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RESET PASSWORD"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do you want to reset?"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/rgMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <RadioButton
            android:id="@+id/rbEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via Email"
            android:checked="true"
            android:layout_marginEnd="20dp"/>
        <RadioButton
            android:id="@+id/rbPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via Phone"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/layoutEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etResetEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPhoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <com.hbb20.CountryCodePicker
            android:id="@+id/ccpReset"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            app:ccp_defaultNameCode="PH"
            app:ccp_showFlag="true"
            app:ccp_showNameCode="false"
            app:ccp_textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"/>
        <EditText
            android:id="@+id/etResetPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:hint="912 345 6789"
            android:inputType="phone"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSendOTP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SEND OTP"
        android:backgroundTint="#8B1A1A"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/layoutResetFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter New Password:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etConfirmNewPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnFinalizeReset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="UPDATE PASSWORD"
            android:backgroundTint="#8B1A1A"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>