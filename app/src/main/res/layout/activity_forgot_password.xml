<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#8B1A1A"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lugaw"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="#8B1A1A"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a way to send OTP"
                android:textColor="#8B1A1A"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"/>

            <RadioGroup
                android:id="@+id/rgMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rbEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send code via Email"
                    android:textColor="#8B1A1A"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="15dp"
                    android:checked="true"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDD"/>

                <RadioButton
                    android:id="@+id/rbPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send code via SMS"
                    android:textColor="#8B1A1A"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="15dp"
                    android:layoutDirection="rtl"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layoutEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginBottom="20dp">
                <EditText
                    android:id="@+id/etResetEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Enter your Email"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPhoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="20dp">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccpReset"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:gravity="center"
                    app:ccp_defaultNameCode="PH"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="16sp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_marginEnd="10dp"/>
                <EditText
                    android:id="@+id/etResetPhone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="912 345 6789"
                    android:padding="15dp"
                    android:inputType="phone"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnSendOTP"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONTINUE"
                android:backgroundTint="#B71C1C"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="30dp"/>

            <LinearLayout
                android:id="@+id/layoutResetFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/etNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="New Password"
                    android:background="@drawable/rounded_edittext"
                    android:padding="15dp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/etConfirmNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Confirm Password"
                    android:background="@drawable/rounded_edittext"
                    android:padding="15dp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btnFinalizeReset"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="UPDATE PASSWORD"
                    android:backgroundTint="#B71C1C"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="30dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btnBackForgot"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

</RelativeLayout>