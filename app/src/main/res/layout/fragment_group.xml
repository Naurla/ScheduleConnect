<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/app_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARED SCHEDULES"
        android:textColor="@color/app_red"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your groups here."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnCreateShared"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="CREATE"
            android:backgroundTint="@color/app_red"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnJoinShared"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="JOIN"
            android:backgroundTint="@color/gray_text"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Groups:"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerGroups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tvNoGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You haven't joined any groups yet."
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>

</LinearLayout>