<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBackGroupDetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/app_red"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GROUP DETAILS"
                android:textColor="@color/app_red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="40dp"/>

            <ImageView
                android:id="@+id/btnGroupChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/stat_notify_chat"
                app:tint="@color/app_red"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Chat"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/app_red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:id="@+id/ivGroupDetailImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_group"
                            app:tint="@color/app_red"
                            android:padding="20dp"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvDetailGroupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Name"
                        android:textColor="@color/app_red"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvDetailGroupCreator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created by: Username"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_edittext"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GROUP CODE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#999"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailGroupCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC-123"
                            android:textColor="@color/app_red"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBERS"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerGroupMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULES"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerGroupSchedules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_schedule"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnInviteMember"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="INVITE MEMBER"
            android:backgroundTint="@color/app_red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnAddGroupSchedule"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ADD SHARED SCHEDULE"
            android:backgroundTint="@color/app_red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnDeleteGroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="DELETE GROUP"
            android:backgroundTint="@color/app_red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnLeaveGroup"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LEAVE GROUP"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:textSize="16sp"
            app:strokeColor="@color/app_red"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
