<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/btnBackGroup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/app_red"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shared Schedule"
            android:textSize="18sp"
            android:textColor="#555"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvGroupDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GROUP NAME"
        android:gravity="center"
        android:textColor="@color/app_red"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvGroupDetailCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARED SCHEDULE CODE: XYZ"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#555"
        android:layout_marginBottom="20dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerGroupSchedules"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvEmptyGroupSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO SHARED SCHEDULES YET..."
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#888"
            android:visibility="gone"/>
    </FrameLayout>

    <Button
        android:id="@+id/btnAddSharedSchedule"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ADD NEW SHARED SCHEDULE"
        android:textSize="12sp"
        android:textStyle="bold"
        android:backgroundTint="@color/app_red"
        android:textColor="@color/white"
        android:drawableBottom="@android:drawable/ic_input_add"
        android:drawableTint="@color/white"/>

</LinearLayout>