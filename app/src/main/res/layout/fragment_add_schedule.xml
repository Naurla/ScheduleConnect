<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW SCHEDULE"
            android:textColor="@color/app_red"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULE NAME:"
            android:textColor="@color/app_red"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etSchName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULE DATE:"
            android:textColor="@color/app_red"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etSchDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:inputType="date"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULE LOCATION:"
            android:textColor="@color/app_red"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etSchLocation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULE DESCRIPTION:"
            android:textColor="@color/app_red"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etSchDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="top|start"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnAddSchedule"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ADD SCHEDULE"
            android:backgroundTint="@color/app_red"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>