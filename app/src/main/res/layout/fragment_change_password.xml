<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/btnBackChangePass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#8B1A1A"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your password must include at least 8 characters"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etCurrentPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Current Password"
        android:background="@drawable/rounded_edittext"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColorHint="#999"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="New Password"
        android:background="@drawable/rounded_edittext"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColorHint="#999"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Confirm Password"
        android:background="@drawable/rounded_edittext"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColorHint="#999"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvForgotPasswordLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnSavePassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SAVE"
        android:backgroundTint="#8B1A1A"
        android:textColor="#FFFFFF"/>
</LinearLayout>