<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnBackAttendee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/app_red"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#333"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tvCreatorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule by: User"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHEDULE NAME:"
        android:textColor="@color/app_red"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tvAttendeeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Title"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#555"
            android:background="@android:color/white"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D7C4C4"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tvCountGoing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GOING: 0"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvCountUnsure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UNSURE: 0"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F57C00"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvCountNotGoing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOT GOING: 0"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATTENDEE STATUS:"
        android:textColor="@color/app_red"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAttendees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/tvEmptyAttendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="NO ATTENDEES YET"
            android:textColor="#999"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>