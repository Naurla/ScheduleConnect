<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT SCHEDULE"
            android:textColor="@color/app_red"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE:"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditSchName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE &amp; TIME:"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditSchDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="15dp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION:"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditSchLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION:"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditSchDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="top|start"
            android:padding="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE IMAGE (OPTIONAL):"
            android:textColor="@color/app_red"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:id="@+id/layoutEditImageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp">

            <Button
                android:id="@+id/btnEditSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textSize="11sp"
                android:backgroundTint="#555555"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/ivEditScheduleImage"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:background="#EEEEEE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdateSchedule"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="UPDATE"
                android:backgroundTint="@color/app_red"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCancelEdit"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="CANCEL"
                android:backgroundTint="@color/gray_text"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>