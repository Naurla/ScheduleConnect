<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E0E0E0"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivSettingsProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:background="@drawable/circle_background"
        android:padding="15dp"
        app:tint="#8B1A1A"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvSettingsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textColor="#B71C1C"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Account"
        android:backgroundTint="#C4B4B4"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:drawableTint="#8B1A1A"
        android:paddingStart="30dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnSecurity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SECURITY"
        android:backgroundTint="#C4B4B4"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawableStart="@android:drawable/ic_secure"
        android:drawableTint="#8B1A1A"
        android:paddingStart="30dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NOTIFICATIONS"
        android:backgroundTint="#C4B4B4"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawableStart="@android:drawable/ic_popup_reminder"
        android:drawableTint="#8B1A1A"
        android:paddingStart="30dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="LANGUAGE"
        android:backgroundTint="#C4B4B4"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawableStart="@android:drawable/ic_menu_mapmode"
        android:drawableTint="#8B1A1A"
        android:paddingStart="30dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="LOGOUT"
        android:backgroundTint="#C4B4B4"
        android:textColor="#8B1A1A"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawableStart="@android:drawable/ic_lock_power_off"
        android:drawableTint="#8B1A1A"
        android:paddingStart="30dp"
        android:gravity="center"/>

</LinearLayout>