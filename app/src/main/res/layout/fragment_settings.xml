<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/viewSettingsHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#8B1A1A" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfileSettings"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF">

        <ImageView
            android:id="@+id/ivSettingsProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/sym_def_app_icon"
            android:scaleType="centerCrop"
            android:padding="2dp"
            app:tint="#8B1A1A" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardProfileSettings"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tvSettingsUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textColor="#B71C1C"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btnAccount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ACCOUNT"
            android:backgroundTint="#C4B4B4"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:icon="@drawable/ic_settings_account"
            app:iconTint="#8B1A1A"
            app:iconGravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btnSecurity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SECURITY"
            android:backgroundTint="#C4B4B4"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:icon="@drawable/ic_settings_security"
            app:iconTint="#8B1A1A"
            app:iconGravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btnNotifications"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="NOTIFICATIONS"
            android:backgroundTint="#C4B4B4"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:icon="@drawable/ic_settings_notifications"
            app:iconTint="#8B1A1A"
            app:iconGravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LANGUAGE"
            android:backgroundTint="#C4B4B4"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:icon="@drawable/ic_settings_language"
            app:iconTint="#8B1A1A"
            app:iconGravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LOGOUT"
            android:backgroundTint="#C4B4B4"
            android:textColor="#8B1A1A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:icon="@drawable/ic_logout"
            app:iconTint="#8B1A1A"
            app:iconGravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center" />

    </LinearLayout>
</RelativeLayout>