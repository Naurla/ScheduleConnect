<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBackEditProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/app_red"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EDIT PROFILE"
                android:textColor="@color/app_red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="40dp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/app_red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ivEditProfileImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_person"
                                app:tint="#999999"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/btnChangePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHANGE PHOTO"
                            android:textColor="@color/app_red"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USERNAME"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etEditUsername"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Username"
                        android:paddingHorizontal="15dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="#888"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERSONAL INFORMATION"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etEditFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="First Name"
                        android:paddingHorizontal="15dp"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etEditMiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Middle Name"
                        android:paddingHorizontal="15dp"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etEditLastName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Last Name"
                        android:paddingHorizontal="15dp"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTACT DETAILS"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etEditEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Email Address"
                        android:paddingHorizontal="15dp"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:drawableTint="@color/app_red"
                        android:drawablePadding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etEditPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Phone Number"
                        android:paddingHorizontal="15dp"
                        android:drawableStart="@android:drawable/ic_menu_call"
                        android:drawableTint="@color/app_red"
                        android:drawablePadding="12dp"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OTHER DETAILS"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etEditGender"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Gender"
                            android:paddingHorizontal="15dp"
                            android:layout_marginEnd="8dp"/>

                        <EditText
                            android:id="@+id/etEditDOB"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Date of Birth"
                            android:paddingHorizontal="15dp"
                            android:drawableStart="@android:drawable/ic_menu_today"
                            android:drawableTint="@color/app_red"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:clickable="true"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>

                    <Button
                        android:id="@+id/btnSaveChanges"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="SAVE CHANGES"
                        android:backgroundTint="@color/app_red"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>