<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_rounded_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Schedules"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#8B1A1A"
        android:layout_marginBottom="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnModalStartDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="START DATE"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/color_red_button_state"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_menu_today"
        app:iconTint="@android:color/white"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnModalEndDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="END DATE"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/color_red_button_state"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_menu_today"
        app:iconTint="@android:color/white"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnModalClearFilter"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Date Filter"
        android:textColor="#8B1A1A"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>