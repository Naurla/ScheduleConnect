<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="100dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnBackCreate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/app_red"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CREATE GROUP"
            android:textColor="@color/app_red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/app_red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GROUP NAME"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Enter Group Name"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_group"
                        android:drawableTint="@color/app_red"
                        android:drawablePadding="12dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GROUP IMAGE (OPTIONAL)"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="8dp">

                        <Button
                            android:id="@+id/btnSelectGroupImage"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Image"
                            android:textColor="@color/app_red"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginEnd="15dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5">
                            <ImageView
                                android:id="@+id/ivGroupImagePreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_gallery"
                                android:scaleType="centerCrop"
                                android:padding="15dp"
                                app:tint="#AAAAAA"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD MEMBERS"
                        android:textColor="@color/app_red"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etAddPeople"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Search Username"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:drawableStart="@android:drawable/ic_menu_search"
                        android:drawableTint="@color/app_red"
                        android:drawablePadding="12dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSearchResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardElevation="0dp"
                        android:visibility="gone"
                        android:layout_marginBottom="20dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerUserResults"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clipToPadding="false"/>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <Button
                        android:id="@+id/btnFinalizeCreate"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="CREATE GROUP"
                        android:backgroundTint="@color/app_red"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>