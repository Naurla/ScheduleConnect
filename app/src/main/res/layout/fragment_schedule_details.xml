<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBackDetail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/app_red"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/app_red"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_today"
                app:tint="#A1887F"/>
            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-12-06 15:46"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="#A1887F"/>
            <TextView
                android:id="@+id/tvDetailLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#A1887F"/>
            <TextView
                android:id="@+id/tvDetailDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description goes here"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/tvDetailCreator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Schedule by: User"
                android:textColor="#555"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btnViewAttendees"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="VIEW ATTENDEES"
                android:textSize="10sp"
                android:textStyle="bold"
                android:backgroundTint="#8B1A1A"
                android:textColor="@color/white"
                android:paddingHorizontal="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRSVPButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Will you attend this schedule?"
                android:textColor="#8B1A1A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAttend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I WILL\nATTEND"
                    android:textSize="11sp"
                    android:backgroundTint="#8B1A1A"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnUnsure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNSURE"
                    android:textSize="11sp"
                    android:backgroundTint="#8B1A1A"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnNotAttend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I WILL NOT\nATTEND"
                    android:textSize="11sp"
                    android:backgroundTint="#8B1A1A"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutChangeMind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR STATUS:"
                android:textColor="#8B1A1A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnCurrentStatus"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="I WILL ATTEND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#8B1A1A"
                android:textColor="@color/white"
                android:clickable="false"/>

            <TextView
                android:id="@+id/tvChangeMind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change your mind?"
                android:textColor="#555"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>