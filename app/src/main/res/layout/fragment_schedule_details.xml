<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="100dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnBackDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/app_red"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnEditSchedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="@color/app_red"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btnDeleteSchedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/app_red"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"/>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/app_red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvDetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schedule Title"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/app_red"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@android:drawable/ic_menu_today"
                            app:tint="@color/app_red"/>
                        <TextView
                            android:id="@+id/tvDetailDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date &amp; Time"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            app:tint="@color/app_red"/>
                        <TextView
                            android:id="@+id/tvDetailLoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location Name"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="@color/app_red"/>
                        <TextView
                            android:id="@+id/tvDetailDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description goes here..."
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:layout_marginStart="16dp"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FAFAFA"
                        android:padding="8dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tvDetailCreator"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="By: User"
                            android:textStyle="italic"
                            android:textColor="#888"
                            android:textSize="12sp"/>

                        <Button
                            android:id="@+id/btnViewAttendees"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Attendees"
                            android:textColor="@color/app_red"
                            android:textSize="12sp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="8dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutRSVPButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WILL YOU ATTEND?"
                android:textColor="@color/app_red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:letterSpacing="0.05"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAttend"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="YES"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/app_red"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnUnsure"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="MAYBE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#F57C00"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnNotAttend"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="NO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#555"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutChangeMind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR STATUS"
                android:textColor="#555"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnCurrentStatus"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="I WILL ATTEND"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/app_red"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                android:clickable="false"/>

            <TextView
                android:id="@+id/tvChangeMind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update my status"
                android:textColor="@color/app_red"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnFinishSchedule"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="FINISH SCHEDULE"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:backgroundTint="@color/app_red"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/checkbox_on_background"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnCancelPersonal"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CANCEL SCHEDULE"
                android:textColor="@color/app_red"
                android:textStyle="bold"
                android:textSize="16sp"
                app:strokeColor="@color/app_red"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>