<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"> <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFEBEE">

            <ImageView
                android:id="@+id/ivNotificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_notifications"
                app:tint="#D32F2F" />
        </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvNotificationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Title"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvNotificationMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is the message body."
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvNotificationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 12, 10:00 AM"
                    android:textColor="#BDBDBD"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivUnreadDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/bg_notification_badge"
                    app:tint="#D32F2F"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp"/>

                <ImageView
                    android:id="@+id/btnDeleteNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#BDBDBD"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutInviteActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnDeclineInvite"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="DECLINE"
                android:textColor="#757575"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnAcceptInvite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="ACCEPT"
                android:textColor="@android:color/white"
                android:backgroundTint="#D32F2F"
                app:cornerRadius="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
